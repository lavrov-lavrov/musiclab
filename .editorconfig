root = true

# all files by default
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown: do not delete spaces in the end of the lines (force line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML: standard indent is 2 spaces
[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab
